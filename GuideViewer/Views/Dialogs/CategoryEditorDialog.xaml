<ContentDialog
    x:Class="GuideViewer.Views.Dialogs.CategoryEditorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Edit Category"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary">

    <StackPanel Spacing="16" MinWidth="400">

        <!-- Validation Message -->
        <InfoBar x:Name="ValidationInfoBar"
                IsOpen="False"
                Severity="Error"
                Title="Validation Error"
                IsClosable="True"/>

        <!-- Category Name -->
        <TextBox x:Name="NameTextBox"
                Header="Category Name *"
                PlaceholderText="Enter category name"
                MaxLength="100"/>

        <!-- Description -->
        <TextBox x:Name="DescriptionTextBox"
                Header="Description"
                PlaceholderText="Enter category description"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                Height="80"
                MaxLength="500"/>

        <!-- Icon Selection -->
        <StackPanel Spacing="8">
            <TextBlock Text="Icon *"
                      Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <ComboBox x:Name="IconComboBox"
                     HorizontalAlignment="Stretch"
                     SelectedIndex="0">
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE8F1;" FontSize="20"/>
                        <TextBlock Text="Document" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE968;" FontSize="20"/>
                        <TextBlock Text="Network" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE9F3;" FontSize="20"/>
                        <TextBlock Text="Server" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xECAA;" FontSize="20"/>
                        <TextBlock Text="Software" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE90F;" FontSize="20"/>
                        <TextBlock Text="Tools" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE7EE;" FontSize="20"/>
                        <TextBlock Text="Settings" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE946;" FontSize="20"/>
                        <TextBlock Text="Phone" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE74E;" FontSize="20"/>
                        <TextBlock Text="Calculator" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Color Selection -->
        <StackPanel Spacing="8">
            <TextBlock Text="Color *"
                      Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <ComboBox x:Name="ColorComboBox"
                     HorizontalAlignment="Stretch"
                     SelectedIndex="0">
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Width="24" Height="24" Background="#0078D4" CornerRadius="4"/>
                        <TextBlock Text="Blue" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Width="24" Height="24" Background="#107C10" CornerRadius="4"/>
                        <TextBlock Text="Green" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Width="24" Height="24" Background="#8764B8" CornerRadius="4"/>
                        <TextBlock Text="Purple" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Width="24" Height="24" Background="#D13438" CornerRadius="4"/>
                        <TextBlock Text="Red" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Width="24" Height="24" Background="#FF8C00" CornerRadius="4"/>
                        <TextBlock Text="Orange" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Width="24" Height="24" Background="#00BCF2" CornerRadius="4"/>
                        <TextBlock Text="Cyan" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Width="24" Height="24" Background="#7A7574" CornerRadius="4"/>
                        <TextBlock Text="Gray" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Preview -->
        <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
               BorderThickness="1"
               CornerRadius="8"
               Padding="16"
               Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <StackPanel Spacing="8">
                <TextBlock Text="Preview"
                          Style="{StaticResource CaptionTextBlockStyle}"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Border x:Name="PreviewColorBorder"
                           Width="40"
                           Height="40"
                           Background="#0078D4"
                           CornerRadius="8">
                        <FontIcon x:Name="PreviewIcon"
                                 Glyph="&#xE8F1;"
                                 FontSize="20"
                                 Foreground="White"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="PreviewName"
                                  Text="Category Name"
                                  FontWeight="SemiBold"/>
                        <TextBlock x:Name="PreviewDescription"
                                  Text="Category description"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</ContentDialog>
