<Page
    x:Class="GuideViewer.Views.Pages.GuideDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="24,24,24,16" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock x:Name="TitleTextBlock"
                          Text="Guide Title"
                          Style="{StaticResource TitleLargeTextBlockStyle}"/>

                <!-- Category Badge -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Border x:Name="CategoryBadge"
                           Width="24"
                           Height="24"
                           CornerRadius="4">
                        <FontIcon x:Name="CategoryIcon"
                                 Glyph="&#xE8F1;"
                                 FontSize="12"
                                 Foreground="White"/>
                    </Border>
                    <TextBlock x:Name="CategoryTextBlock"
                              Text="Category"
                              VerticalAlignment="Center"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

                <TextBlock x:Name="DescriptionTextBlock"
                          Text="Guide description"
                          TextWrapping="Wrap"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          MaxWidth="600"
                          HorizontalAlignment="Left"/>

                <!-- Metadata -->
                <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE8DF;" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="CreatedAtTextBlock"
                                  Text="Created: --"
                                  FontSize="12"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE70F;" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="UpdatedAtTextBlock"
                                  Text="Updated: --"
                                  FontSize="12"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Top">
                <Button Click="EditGuide_Click" ToolTipService.ToolTip="Edit this guide">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                        <TextBlock Text="Edit"/>
                    </StackPanel>
                </Button>
                <Button Click="Close_Click" ToolTipService.ToolTip="Close">
                    <FontIcon Glyph="&#xE711;" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="24">
            <StackPanel Spacing="16">
                <!-- Steps Header -->
                <TextBlock Text="Steps"
                          Style="{StaticResource SubtitleTextBlockStyle}"/>

                <!-- Steps List -->
                <ItemsRepeater x:Name="StepsRepeater">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="12"/>
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   Padding="16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Step Header -->
                                    <Grid Grid.Row="0" Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                               Background="{ThemeResource AccentFillColorDefaultBrush}"
                                               Width="32"
                                               Height="32"
                                               CornerRadius="16"
                                               Margin="0,0,12,0">
                                            <TextBlock Text="{Binding Order}"
                                                      Foreground="White"
                                                      FontWeight="SemiBold"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <TextBlock Grid.Column="1"
                                                  Text="{Binding Title}"
                                                  Style="{StaticResource BodyStrongTextBlockStyle}"
                                                  VerticalAlignment="Center"/>
                                    </Grid>

                                    <!-- Step Instructions -->
                                    <RichEditBox Grid.Row="1"
                                                x:Name="StepInstructionsBox"
                                                IsReadOnly="True"
                                                MinHeight="100"
                                                MaxHeight="400"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                Loaded="StepInstructionsBox_Loaded"
                                                Tag="{Binding Instructions}"/>

                                    <!-- Step Image -->
                                    <Image Grid.Row="2"
                                          x:Name="StepImage"
                                          MaxHeight="400"
                                          Margin="0,12,0,0"
                                          Stretch="Uniform"
                                          HorizontalAlignment="Left"
                                          Loaded="StepImage_Loaded"
                                          Tag="{Binding ImageFileId}"
                                          Visibility="{Binding ImageFileId, Converter={StaticResource NullToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>

                <!-- Empty State -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="48"
                       x:Name="EmptyState"
                       Visibility="Collapsed">
                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                        <FontIcon Glyph="&#xE8F1;" FontSize="48" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="No steps in this guide"
                                  Style="{StaticResource BodyTextBlockStyle}"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2"
             x:Name="LoadingOverlay"
             Background="{ThemeResource LayerFillColorDefaultBrush}"
             Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressRing IsActive="True" Width="48" Height="48"/>
                <TextBlock Text="Loading guide..." Style="{StaticResource BodyTextBlockStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
