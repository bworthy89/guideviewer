<Page
    x:Class="GuideViewer.Views.Pages.ActiveGuideProgressPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- Loading Overlay -->
        <Grid
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
            Canvas.ZIndex="1000">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="16">
                <ProgressRing
                    IsActive="True"
                    Width="60"
                    Height="60"/>
                <TextBlock
                    Text="Loading guide..."
                    Style="{StaticResource SubtitleTextBlockStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid
            Padding="24"
            Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Progress -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Guide Title & Close Button -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Text="{Binding PageTitle}"
                        Style="{StaticResource TitleLargeTextBlockStyle}"
                        TextWrapping="Wrap"/>

                    <Button
                        Grid.Column="1"
                        Click="ExitButton_Click"
                        ToolTipService.ToolTip="Exit guide"
                        Margin="16,0,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE711;" FontSize="16"/>
                            <TextBlock Text="Exit"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Progress Bar & Stats -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Progress Info -->
                    <StackPanel Grid.Column="0" Spacing="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Text="{Binding ProgressText}"
                                Style="{StaticResource BodyStrongTextBlockStyle}"/>

                            <TextBlock
                                Grid.Column="2"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                <Run Text="{Binding CompletedStepsCount}"/>
                                <Run Text="/"/>
                                <Run Text="{Binding AllSteps.Count}"/>
                                <Run Text="completed"/>
                            </TextBlock>
                        </Grid>

                        <ProgressBar
                            Value="{Binding ProgressPercentage}"
                            Maximum="100"
                            Height="6"/>
                    </StackPanel>

                    <!-- Timer -->
                    <StackPanel
                        Grid.Column="1"
                        Margin="24,0,0,0"
                        Spacing="4"
                        HorizontalAlignment="Right">
                        <TextBlock
                            Text="Elapsed Time"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Right"/>
                        <TextBlock
                            Text="{Binding ElapsedTimeDisplay}"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            FontFamily="Consolas"
                            HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Step Title -->
            <TextBlock
                Grid.Row="1"
                Text="{Binding CurrentStep.Title}"
                Style="{StaticResource TitleTextBlockStyle}"
                Margin="0,0,0,16"
                TextWrapping="Wrap"/>

            <!-- Step Content ScrollViewer -->
            <ScrollViewer Grid.Row="2" Margin="0,0,0,16">
                <StackPanel Spacing="24">
                    <!-- Step Instructions -->
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock
                                Text="Instructions"
                                Style="{StaticResource BodyStrongTextBlockStyle}"/>

                            <RichEditBox
                                x:Name="StepContentRichEditBox"
                                IsReadOnly="True"
                                BorderThickness="0"
                                Background="Transparent"
                                MinHeight="120"
                                MaxHeight="400"/>
                        </StackPanel>
                    </Border>

                    <!-- Step Image -->
                    <Border
                        x:Name="StepImageBorder"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Visibility="Collapsed">
                        <StackPanel Spacing="12">
                            <TextBlock
                                Text="Reference Image"
                                Style="{StaticResource BodyStrongTextBlockStyle}"/>

                            <Image
                                x:Name="StepImage"
                                MaxHeight="400"
                                Stretch="Uniform"
                                HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Step Completion Checkbox -->
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <CheckBox
                            Content="Mark this step as completed"
                            IsChecked="{Binding IsCurrentStepCompleted, Mode=TwoWay}"
                            Command="{Binding ToggleStepCompletionCommand}"
                            FontSize="16"
                            FontWeight="SemiBold"/>
                    </Border>

                    <!-- Notes Section -->
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Text="Notes"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>

                                <TextBlock
                                    Grid.Column="1"
                                    Text="Auto-saves every 30 seconds"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    VerticalAlignment="Center"/>
                            </Grid>

                            <TextBox
                                Text="{Binding StepNotes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="Add your notes for this step..."
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                MinHeight="100"
                                MaxHeight="200"
                                MaxLength="5000"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Text="Characters: "
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}">
                                    <Run Text="{Binding StepNotes.Length}"/>
                                    <Run Text="/ 5000"/>
                                </TextBlock>

                                <StackPanel
                                    Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="4"
                                    Visibility="{Binding HasUnsavedNotes, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <FontIcon
                                        Glyph="&#xE7BA;"
                                        FontSize="12"
                                        Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                                    <TextBlock
                                        Text="Unsaved changes"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                                </StackPanel>
                            </Grid>

                            <Button
                                Content="Save Notes Now"
                                Command="{Binding SaveNotesCommand}"
                                IsEnabled="{Binding HasUnsavedNotes}"
                                HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Navigation Buttons -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Previous Button -->
                <Button
                    Grid.Column="0"
                    Command="{Binding PreviousStepCommand}"
                    IsEnabled="{Binding IsFirstStep, Converter={StaticResource InverseBooleanConverter}}"
                    MinWidth="120"
                    Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE76B;" FontSize="16"/>
                        <TextBlock Text="Previous"/>
                    </StackPanel>
                </Button>

                <!-- Spacer -->
                <Border Grid.Column="1"/>

                <!-- Finish Guide Button (only on last step with all steps completed) -->
                <Button
                    Grid.Column="2"
                    Command="{Binding FinishGuideCommand}"
                    Visibility="{Binding CanFinishGuide, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Style="{StaticResource AccentButtonStyle}"
                    MinWidth="140"
                    Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE73E;" FontSize="16"/>
                        <TextBlock Text="Finish Guide"/>
                    </StackPanel>
                </Button>

                <!-- Next Button -->
                <Button
                    Grid.Column="3"
                    Command="{Binding NextStepCommand}"
                    IsEnabled="{Binding IsLastStep, Converter={StaticResource InverseBooleanConverter}}"
                    Style="{StaticResource AccentButtonStyle}"
                    MinWidth="120">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Next"/>
                        <FontIcon Glyph="&#xE76C;" FontSize="16"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
