<Page
    x:Class="GuideViewer.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock
                Text="About GuideViewer"
                Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock
                Text="Service technician guide management system"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="32" MaxWidth="800">

                <!-- App Information Card -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                    <StackPanel Spacing="16">
                        <!-- App Icon and Name -->
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <Border
                                Width="64"
                                Height="64"
                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                CornerRadius="8">
                                <FontIcon
                                    Glyph="&#xE8F1;"
                                    FontSize="32"
                                    Foreground="White"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Spacing="4">
                                <TextBlock
                                    Text="GuideViewer"
                                    Style="{StaticResource TitleTextBlockStyle}"
                                    FontWeight="SemiBold"/>
                                <TextBlock
                                    x:Name="VersionTextBlock"
                                    Text="Version 1.0.0"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock
                            TextWrapping="Wrap"
                            Style="{StaticResource BodyTextBlockStyle}">
                            GuideViewer is a Windows desktop application designed for service technicians
                            to access and track progress on installation guides. Built with WinUI 3 and .NET 8,
                            it provides an offline-first experience with role-based access control.
                        </TextBlock>

                        <!-- Copyright -->
                        <TextBlock
                            x:Name="CopyrightTextBlock"
                            Text="Â© 2025 GuideViewer. All rights reserved."
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- System Information Card -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock
                            Text="System Information"
                            Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <StackPanel Spacing="8">
                            <!-- OS Version -->
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Text="Operating System:"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock
                                    Grid.Column="1"
                                    x:Name="OSVersionTextBlock"
                                    Text="Windows"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </Grid>

                            <!-- .NET Version -->
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Text=".NET Runtime:"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock
                                    Grid.Column="1"
                                    x:Name="DotNetVersionTextBlock"
                                    Text=".NET 8.0"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </Grid>

                            <!-- Architecture -->
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Text="Architecture:"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock
                                    Grid.Column="1"
                                    x:Name="ArchitectureTextBlock"
                                    Text="x64"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </Grid>

                            <!-- Build Date -->
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Text="Build Date:"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock
                                    Grid.Column="1"
                                    x:Name="BuildDateTextBlock"
                                    Text="2025-11-17"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Credits Card -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock
                            Text="Built With"
                            Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <StackPanel Spacing="12">
                            <!-- WinUI 3 -->
                            <StackPanel Spacing="4">
                                <TextBlock
                                    Text="WinUI 3 (Windows App SDK)"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock
                                    Text="Modern UI framework for Windows desktop apps"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- .NET 8 -->
                            <StackPanel Spacing="4">
                                <TextBlock
                                    Text=".NET 8"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock
                                    Text="Cross-platform, high-performance runtime"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- LiteDB -->
                            <StackPanel Spacing="4">
                                <TextBlock
                                    Text="LiteDB"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock
                                    Text="Lightweight NoSQL embedded database"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- CommunityToolkit.Mvvm -->
                            <StackPanel Spacing="4">
                                <TextBlock
                                    Text="CommunityToolkit.Mvvm"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock
                                    Text="MVVM helpers and code generators"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Serilog -->
                            <StackPanel Spacing="4">
                                <TextBlock
                                    Text="Serilog"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock
                                    Text="Structured logging framework"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Links Card -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock
                            Text="Resources"
                            Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <StackPanel Spacing="8">
                            <!-- Documentation Link -->
                            <HyperlinkButton
                                Click="DocumentationLink_Click"
                                Padding="0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A5;" FontSize="16"/>
                                    <TextBlock Text="Documentation"/>
                                </StackPanel>
                            </HyperlinkButton>

                            <!-- License Link -->
                            <HyperlinkButton
                                Click="LicenseLink_Click"
                                Padding="0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8AB;" FontSize="16"/>
                                    <TextBlock Text="License Information"/>
                                </StackPanel>
                            </HyperlinkButton>

                            <!-- GitHub Link -->
                            <HyperlinkButton
                                Click="GitHubLink_Click"
                                Padding="0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE774;" FontSize="16"/>
                                    <TextBlock Text="View on GitHub"/>
                                </StackPanel>
                            </HyperlinkButton>

                            <!-- Keyboard Shortcuts Link -->
                            <HyperlinkButton
                                Click="KeyboardShortcutsLink_Click"
                                Padding="0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE92E;" FontSize="16"/>
                                    <TextBlock Text="Keyboard Shortcuts (F2)"/>
                                </StackPanel>
                            </HyperlinkButton>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- License Text -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                    <StackPanel Spacing="12">
                        <TextBlock
                            Text="License"
                            Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <TextBlock
                            TextWrapping="Wrap"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                            This software is provided for authorized users only.
                            All features and content are protected by applicable laws.
                            Unauthorized copying, distribution, or modification is prohibited.
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
