<Page
    x:Class="GuideViewer.Views.Pages.GuideEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Grid.Column="0"
                    Command="{Binding CancelCommand}"
                    Margin="0,0,16,0"
                    ToolTipService.ToolTip="Go back">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE72B;" FontSize="16"/>
                    <TextBlock Text="Back"/>
                </StackPanel>
            </Button>

            <!-- Title -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding PageTitle}"
                          Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BooleanToVisibilityConverter}}"
                          Margin="0,4,0,0"
                          Foreground="{ThemeResource SystemAccentColor}">
                    <Run Text="â€¢"/>
                    <Run Text="Unsaved changes"/>
                </TextBlock>
                <TextBlock Visibility="{Binding LastSavedAt, Converter={StaticResource NullToVisibilityConverter}}"
                          Margin="0,4,0,0"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          FontSize="12">
                    <Run Text="Last saved at"/>
                    <Run Text="{Binding LastSavedAt}"/>
                </TextBlock>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2"
                       Orientation="Horizontal"
                       Spacing="8"
                       VerticalAlignment="Center">
                <Button Content="Save"
                       Command="{Binding SaveCommand}"
                       Style="{StaticResource AccentButtonStyle}"
                       IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBooleanConverter}}">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="S" Modifiers="Control"/>
                    </Button.KeyboardAccelerators>
                </Button>
                <Button Content="Save &amp; Close"
                       Command="{Binding SaveAndCloseCommand}"
                       IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBooleanConverter}}"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="24,0,24,24">
            <StackPanel Spacing="24" MaxWidth="1200">

                <!-- Validation Message -->
                <InfoBar IsOpen="{Binding HasValidationError}"
                        Severity="Error"
                        Title="Validation Error"
                        Message="{Binding ValidationMessage}"
                        IsClosable="True"/>

                <!-- Loading Indicator -->
                <ProgressRing IsActive="{Binding IsLoading}"
                             Width="40"
                             Height="40"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Guide Basic Info -->
                <StackPanel Spacing="16"
                           Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">

                    <!-- Title -->
                    <TextBox Header="Title *"
                            Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Enter guide title"
                            MaxLength="200"/>

                    <!-- Description -->
                    <TextBox Header="Description"
                            Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Brief description of this guide"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            Height="100"
                            MaxLength="500"/>

                    <!-- Category and Time Grid -->
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Category -->
                        <ComboBox Grid.Column="0"
                                 Header="Category *"
                                 Text="{Binding Category, Mode=TwoWay}"
                                 IsEditable="True"
                                 ItemsSource="{Binding AvailableCategories}"
                                 DisplayMemberPath="Name"
                                 HorizontalAlignment="Stretch"
                                 PlaceholderText="Select or enter category"/>

                        <!-- Estimated Minutes -->
                        <NumberBox Grid.Column="1"
                                  Header="Estimated Time (minutes) *"
                                  Value="{Binding EstimatedMinutes, Mode=TwoWay}"
                                  Minimum="1"
                                  Maximum="999"
                                  SpinButtonPlacementMode="Inline"
                                  HorizontalAlignment="Stretch"/>
                    </Grid>
                </StackPanel>

                <!-- Steps Section -->
                <StackPanel Spacing="16"
                           Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">

                    <!-- Steps Header -->
                    <Grid>
                        <TextBlock Text="Steps *"
                                  Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <Button Command="{Binding AddStepCommand}"
                               HorizontalAlignment="Right">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                    <TextBlock Text="Add Step"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Grid>

                    <!-- Steps List -->
                    <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           CornerRadius="8"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           Visibility="{Binding Steps.Count, Converter={StaticResource CountToVisibilityConverter}}"
                           Padding="0">

                        <ItemsRepeater ItemsSource="{Binding Steps}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="16,12"
                                         BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                         BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Order Number -->
                                        <Border Grid.Column="0"
                                               Background="{ThemeResource AccentFillColorDefaultBrush}"
                                               CornerRadius="12"
                                               Width="24"
                                               Height="24"
                                               Margin="0,0,12,0">
                                            <TextBlock Text="{Binding Order}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      FontSize="12"
                                                      FontWeight="SemiBold"
                                                      Foreground="White"/>
                                        </Border>

                                        <!-- Step Info -->
                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <TextBlock Text="{Binding Title}"
                                                      FontWeight="SemiBold"
                                                      TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      FontSize="12">
                                                <Run Text="{Binding ImageIds.Count}"/>
                                                <Run Text="image(s)"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Step Actions -->
                                        <StackPanel Grid.Column="2"
                                                   Orientation="Horizontal"
                                                   Spacing="4">
                                            <!-- Move Up -->
                                            <Button Command="{Binding DataContext.MoveStepUpCommand, ElementName=PageRoot}"
                                                   CommandParameter="{Binding}"
                                                   ToolTipService.ToolTip="Move up"
                                                   Width="32"
                                                   Height="32"
                                                   Padding="0">
                                                <FontIcon Glyph="&#xE70E;" FontSize="14"/>
                                            </Button>

                                            <!-- Move Down -->
                                            <Button Command="{Binding DataContext.MoveStepDownCommand, ElementName=PageRoot}"
                                                   CommandParameter="{Binding}"
                                                   ToolTipService.ToolTip="Move down"
                                                   Width="32"
                                                   Height="32"
                                                   Padding="0">
                                                <FontIcon Glyph="&#xE70D;" FontSize="14"/>
                                            </Button>

                                            <!-- Edit -->
                                            <Button Click="EditStep_Click"
                                                   Tag="{Binding}"
                                                   ToolTipService.ToolTip="Edit step"
                                                   Width="32"
                                                   Height="32"
                                                   Padding="0">
                                                <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                            </Button>

                                            <!-- Delete -->
                                            <Button Command="{Binding DataContext.DeleteStepCommand, ElementName=PageRoot}"
                                                   CommandParameter="{Binding}"
                                                   ToolTipService.ToolTip="Delete step"
                                                   Width="32"
                                                   Height="32"
                                                   Padding="0">
                                                <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="Red"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </Border>

                    <!-- Empty Steps State -->
                    <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="32"
                           Visibility="{Binding Steps.Count, Converter={StaticResource InverseCountToVisibilityConverter}}">
                        <StackPanel Spacing="12" HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE8FD;"
                                     FontSize="48"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="No steps yet"
                                      Style="{StaticResource SubtitleTextBlockStyle}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Click 'Add Step' to create your first step"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Step Editor (shown when a step is selected) -->
                <StackPanel Spacing="16"
                           x:Name="StepEditorPanel"
                           Visibility="Collapsed">

                    <!-- Step Editor Header -->
                    <Grid>
                        <TextBlock Style="{StaticResource SubtitleTextBlockStyle}">
                            <Run Text="Edit Step"/>
                            <Run Text="{Binding SelectedStepOrderDisplay}"/>
                        </TextBlock>
                        <Button Content="Close Editor"
                               Click="CloseStepEditor_Click"
                               HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Step Title -->
                    <TextBox Header="Step Title *"
                            Text="{Binding SelectedStep.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Enter step title"
                            MaxLength="200"/>

                    <!-- Step Content (RichEditBox) -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Instructions *"
                                  Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <RichEditBox x:Name="StepContentEditor"
                                    MinHeight="200"
                                    MaxHeight="400"
                                    PlaceholderText="Enter step instructions..."
                                    TextChanged="StepContentEditor_TextChanged"/>
                    </StackPanel>

                    <!-- Image Upload -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Images"
                                  Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <Button Click="UploadImage_Click">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xEB9F;" FontSize="16"/>
                                    <TextBlock Text="Upload Image"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <!-- Image Preview Grid -->
                        <ItemsRepeater x:Name="ImagePreviewRepeater"
                                      ItemsSource="{Binding SelectedStep.ImageIds}">
                            <ItemsRepeater.Layout>
                                <UniformGridLayout MinItemWidth="120"
                                                  MinItemHeight="120"
                                                  ItemsStretch="Fill"
                                                  MinColumnSpacing="8"
                                                  MinRowSpacing="8"/>
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Grid CornerRadius="4">
                                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                               BorderThickness="1"
                                               CornerRadius="4">
                                            <Image x:Name="StepImage"
                                                  Stretch="UniformToFill"
                                                  Loaded="StepImage_Loaded"
                                                  Tag="{Binding}"/>
                                        </Border>

                                        <!-- Delete Image Button -->
                                        <Button Command="{Binding DataContext.DeleteImageCommand, ElementName=PageRoot}"
                                               CommandParameter="{Binding}"
                                               Background="Black"
                                               CornerRadius="12"
                                               Width="24"
                                               Height="24"
                                               Padding="0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="4">
                                            <FontIcon Glyph="&#xE711;" FontSize="12" Foreground="White"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
