<Page
    x:Class="GuideViewer.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock
                Text="Settings"
                Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock
                Text="Customize your GuideViewer experience"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="24">
                <!-- Appearance Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Appearance" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel Spacing="8">
                        <TextBlock Text="Theme" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <ComboBox
                            x:Name="ThemeComboBox"
                            PlaceholderText="Select theme"
                            Width="300"
                            HorizontalAlignment="Left"
                            SelectedIndex="0">
                            <ComboBoxItem Content="Light"/>
                            <ComboBoxItem Content="Dark"/>
                            <ComboBoxItem Content="Use system setting"/>
                        </ComboBox>
                        <TextBlock
                            Text="Changes will take effect after restarting the application"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Category Management Section (Admin Only) -->
                <StackPanel Spacing="12" x:Name="CategoryManagementSection">
                    <TextBlock Text="Category Management" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <TextBlock
                        Text="Manage guide categories with custom icons and colors"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Categories List -->
                        <Border Grid.Column="0"
                               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                               BorderThickness="1"
                               CornerRadius="8"
                               Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                               MaxHeight="400"
                               Margin="0,0,8,0">
                            <ScrollViewer>
                                <ItemsRepeater x:Name="CategoriesRepeater">
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="12,8"
                                                 BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                                 BorderThickness="0,0,0,1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Icon Badge -->
                                                <Border Grid.Column="0"
                                                       Width="32"
                                                       Height="32"
                                                       CornerRadius="6"
                                                       Margin="0,0,12,0"
                                                       x:Name="CategoryBadge"
                                                       Loaded="CategoryBadge_Loaded"
                                                       Tag="{Binding Color}">
                                                    <FontIcon Glyph="{Binding IconGlyph}"
                                                             FontSize="16"
                                                             Foreground="White"/>
                                                </Border>

                                                <!-- Category Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}"
                                                              FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Description}"
                                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                              FontSize="12"
                                                              TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <!-- Actions -->
                                                <StackPanel Grid.Column="2"
                                                           Orientation="Horizontal"
                                                           Spacing="4">
                                                    <Button Click="EditCategory_Click"
                                                           Tag="{Binding}"
                                                           ToolTipService.ToolTip="Edit category"
                                                           Width="32"
                                                           Height="32"
                                                           Padding="0">
                                                        <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                                    </Button>
                                                    <Button Click="DeleteCategory_Click"
                                                           Tag="{Binding}"
                                                           ToolTipService.ToolTip="Delete category"
                                                           Width="32"
                                                           Height="32"
                                                           Padding="0">
                                                        <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="Red"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                            </ScrollViewer>
                        </Border>

                        <!-- Add Button -->
                        <Button Grid.Column="1"
                               Click="AddCategory_Click"
                               VerticalAlignment="Top"
                               ToolTipService.ToolTip="Add new category">
                            <StackPanel Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="20"/>
                                <TextBlock Text="Add" FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <TextBlock Text="Note: Categories in use by guides cannot be deleted"
                              Style="{StaticResource CaptionTextBlockStyle}"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

                <!-- About Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="About" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel Spacing="8">
                        <TextBlock Text="GuideViewer" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <TextBlock Text="Version 1.0.0" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="Installation guide viewer for service technicians" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <HyperlinkButton Content="View on GitHub" NavigateUri="https://github.com/yourusername/guideviewer"/>
                </StackPanel>

                <!-- Database Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Data" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel Spacing="8">
                        <TextBlock Text="Database Location" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <TextBlock
                            Text="%LocalAppData%\GuideViewer\data.db"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            FontFamily="Consolas"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="Logs Location" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <TextBlock
                            Text="%LocalAppData%\GuideViewer\logs\"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            FontFamily="Consolas"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Progress Reports Section (Admin Only) -->
                <StackPanel
                    x:Name="ProgressReportsSection"
                    Spacing="12"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="Progress Reports" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <TextBlock
                        Text="View all users' progress across guides"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                    <!-- Filters -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <AutoSuggestBox
                            Grid.Column="0"
                            x:Name="ProgressSearchBox"
                            PlaceholderText="Search by user or guide..."
                            QueryIcon="Find"
                            Margin="0,0,8,0"
                            TextChanged="ProgressSearchBox_TextChanged"/>

                        <!-- User Filter -->
                        <ComboBox
                            Grid.Column="1"
                            x:Name="UserFilterComboBox"
                            PlaceholderText="Filter by user"
                            Width="250"
                            Margin="4,0,4,0"
                            HorizontalAlignment="Stretch"
                            ItemsSource="{Binding AvailableUsers}"
                            SelectedItem="{Binding SelectedUserFilter, Mode=TwoWay}"/>

                        <!-- Guide Filter -->
                        <ComboBox
                            Grid.Column="2"
                            x:Name="GuideFilterComboBox"
                            PlaceholderText="Filter by guide"
                            Width="250"
                            Margin="8,0,0,0"
                            HorizontalAlignment="Stretch"
                            ItemsSource="{Binding AvailableGuides}"
                            SelectedItem="{Binding SelectedGuideFilter, Mode=TwoWay}"/>
                    </Grid>

                    <!-- Loading Indicator -->
                    <ProgressRing
                        IsActive="{Binding IsLoading}"
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        HorizontalAlignment="Center"
                        Margin="0,24,0,24"
                        Width="40" Height="40"/>

                    <!-- Progress Reports List -->
                    <ItemsRepeater
                        ItemsSource="{Binding FilteredProgress}"
                        Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <ItemsRepeater.Layout>
                            <StackLayout Spacing="12"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Row 1: User and Guide -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                            <TextBlock
                                                Text="{Binding UserName}"
                                                Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                            <TextBlock
                                                Text="{Binding GuideTitle}"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>

                                        <!-- Row 1: Status Badge -->
                                        <Border
                                            Grid.Row="0" Grid.Column="1"
                                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            VerticalAlignment="Center">
                                            <TextBlock
                                                Text="{Binding Status}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="White"/>
                                        </Border>

                                        <!-- Row 2: Progress Bar -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Spacing="4" Margin="0,12,0,0">
                                            <ProgressBar
                                                Value="{Binding CompletionPercentage}"
                                                Maximum="100"
                                                Height="4"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Text="{Binding ProgressDisplayText}"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                                <TextBlock
                                                    Grid.Column="2"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="{Binding CompletionPercentage}"/><Run Text="%"/>
                                                </TextBlock>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Row 3: Metadata -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="4" Margin="0,8,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Text="{Binding TimeSpentDisplayText}"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>

                                                <TextBlock
                                                    Grid.Column="2"
                                                    Text="{Binding LastAccessedDisplayText}"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>

                    <!-- Empty State -->
                    <InfoBar
                        Title="No Progress Records"
                        Message="No users have started any guides yet."
                        Severity="Informational"
                        IsOpen="True"
                        IsClosable="False"
                        Visibility="{Binding HasProgress, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Coming Soon -->
                <StackPanel Spacing="8" Margin="0,24,0,0">
                    <TextBlock
                        Text="Coming in future milestones:"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Spacing="8">
                        <TextBlock Text="• SharePoint sync settings" Style="{StaticResource BodyTextBlockStyle}"/>
                        <TextBlock Text="• Offline mode configuration" Style="{StaticResource BodyTextBlockStyle}"/>
                        <TextBlock Text="• Data backup and restore" Style="{StaticResource BodyTextBlockStyle}"/>
                        <TextBlock Text="• Language preferences" Style="{StaticResource BodyTextBlockStyle}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
