<Page
    x:Name="Root"
    x:Class="GuideViewer.Views.Pages.ProgressPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock
                Text="Progress Dashboard"
                Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock
                Text="Track your installation progress across all guides"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="32">
                <!-- Loading Indicator -->
                <ProgressRing
                    IsActive="{Binding IsLoading}"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    HorizontalAlignment="Center"
                    Width="40" Height="40"/>

                <!-- Statistics Cards -->
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Started Card -->
                    <Border Grid.Column="0"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,8,0">
                        <StackPanel Spacing="4">
                            <TextBlock
                                Text="{Binding TotalStarted}"
                                Style="{StaticResource TitleTextBlockStyle}"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock
                                Text="Started"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- In Progress Card -->
                    <Border Grid.Column="1"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="4,0,4,0">
                        <StackPanel Spacing="4">
                            <TextBlock
                                Text="{Binding CurrentlyInProgress}"
                                Style="{StaticResource TitleTextBlockStyle}"
                                Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                            <TextBlock
                                Text="In Progress"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Completed Card -->
                    <Border Grid.Column="2"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="4,0,4,0">
                        <StackPanel Spacing="4">
                            <TextBlock
                                Text="{Binding TotalCompleted}"
                                Style="{StaticResource TitleTextBlockStyle}"
                                Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                            <TextBlock
                                Text="Completed"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Completion Rate Card -->
                    <Border Grid.Column="3"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="4,0,4,0">
                        <StackPanel Spacing="4">
                            <TextBlock
                                Style="{StaticResource TitleTextBlockStyle}"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}">
                                <Run Text="{Binding CompletionRate}"/><Run Text="%"/>
                            </TextBlock>
                            <TextBlock
                                Text="Completion Rate"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Average Time Card -->
                    <Border Grid.Column="4"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="8,0,0,0">
                        <StackPanel Spacing="4">
                            <TextBlock
                                Style="{StaticResource TitleTextBlockStyle}"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}">
                                <Run Text="{Binding AverageCompletionTimeHours}"/><Run Text="h"/>
                            </TextBlock>
                            <TextBlock
                                Text="Avg. Time"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Active Guides Section -->
                <StackPanel Spacing="16" Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <TextBlock
                        Text="Active Guides"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <!-- Active Guides List -->
                    <ItemsRepeater
                        ItemsSource="{Binding ActiveGuides}"
                        Visibility="{Binding HasActiveGuides, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsRepeater.Layout>
                            <StackLayout Spacing="12"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Guide Info -->
                                        <StackPanel Grid.Column="0" Spacing="8">
                                            <TextBlock
                                                Text="{Binding GuideTitle}"
                                                Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                            <TextBlock
                                                Text="{Binding GuideCategory}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                            <!-- Progress Bar -->
                                            <ProgressBar
                                                Value="{Binding ProgressPercentage}"
                                                Maximum="100"
                                                Height="4"
                                                Margin="0,4,0,0"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Text="{Binding ProgressDisplayText}"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                                <TextBlock
                                                    Grid.Column="2"
                                                    Text="{Binding TimeRemainingDisplayText}"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </Grid>

                                            <TextBlock
                                                Text="{Binding LastAccessedDisplayText}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                        </StackPanel>

                                        <!-- Resume Button -->
                                        <Button
                                            Grid.Column="1"
                                            Content="Resume"
                                            Command="{Binding ElementName=Root, Path=DataContext.ResumeGuideCommand}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource AccentButtonStyle}"
                                            VerticalAlignment="Center"
                                            Margin="16,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>

                    <!-- Empty State -->
                    <InfoBar
                        Title="No Active Guides"
                        Message="Start tracking your progress by opening a guide from the Guides page."
                        Severity="Informational"
                        IsOpen="True"
                        IsClosable="False"
                        Visibility="{Binding HasActiveGuides, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Recently Completed Section -->
                <StackPanel Spacing="16" Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <TextBlock
                        Text="Recently Completed"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <!-- Completed Guides List -->
                    <ItemsRepeater
                        ItemsSource="{Binding CompletedGuides}"
                        Visibility="{Binding HasCompletedGuides, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsRepeater.Layout>
                            <StackLayout Spacing="12"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Guide Info -->
                                        <StackPanel Grid.Column="0" Spacing="8">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    Glyph="&#xE73E;"
                                                    FontSize="16"
                                                    Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                                <TextBlock
                                                    Text="{Binding GuideTitle}"
                                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                            </StackPanel>
                                            <TextBlock
                                                Text="{Binding GuideCategory}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock
                                                Text="{Binding CompletedDisplayText}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                            <TextBlock
                                                Text="{Binding TimeSpentDisplayText}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                        </StackPanel>

                                        <!-- View Button -->
                                        <Button
                                            Grid.Column="1"
                                            Content="View"
                                            Command="{Binding ElementName=Root, Path=DataContext.ViewCompletedGuideCommand}"
                                            CommandParameter="{Binding}"
                                            VerticalAlignment="Center"
                                            Margin="16,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>

                    <!-- Empty State -->
                    <InfoBar
                        Title="No Completed Guides Yet"
                        Message="Complete guides will appear here with completion statistics."
                        Severity="Informational"
                        IsOpen="True"
                        IsClosable="False"
                        Visibility="{Binding HasCompletedGuides, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
